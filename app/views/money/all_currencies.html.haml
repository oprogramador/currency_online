%h1= t 'all_currencies.extra.header'
%table{border: 2, class: 'data_table'}
  - keys = %w(name code)
  %thead
    %tr
      - keys.each do |key|
        %td= t 'all_currencies.keys.'+key
  %tbody
    - @currencies.each do |entity|
      %tr
        - keys.each do |key|
          %td{class: 'clickable', onclick: 'location.href="'+url_for(controller: 'money', action: 'report', code: entity.code)+'"'}= entity[key]
