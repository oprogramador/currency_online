%h1= t 'all_currencies.extra.header'
%table{border: 2}
  - keys = %w(name code)
  %thead
    %tr
      - keys.each do |key|
        %td= t 'all_currencies.keys.'+key
  %tbody
    - @currencies.each do |entity|
      %tr
        - keys.each do |key|
          %td= link_to entity[key], controller: 'money', action: 'report', code: entity.code
